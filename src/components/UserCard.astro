---
const {username} = Astro.props
---
<div class="user-card">
  <div class="the-user">
    <div class="user-avatar">
      <img src="/assets/image-jeremy.png" alt="Jeremy Robson profile picture">
    </div>
    <div class="user-name">
      <span>Report for</span>
      <h1>{username}</h1>
    </div>
  </div>
  <ul class="card-actions">
    <li><a href="#" class="action">Daily</a></li>
    <li><a href="#" class="action active" aria-current="true">Weekly</a></li>
    <li><a href="#" class="action">Monthly</a></li>
  </ul>
</div>

<style lang="scss">
  @use "../styles/base/breakpoint" as *;

  .user-card {
    background-color: var(--neutral-dark);
    color: #fff;
    border-radius: 1rem;
    width: 90vw;
    // opacity: 0;
    box-shadow: 0 4px 80px rgba(0, 0, 0, 0.2);

    @include breakpoint(large) {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: auto;
      min-width: 250px;
    }

    .the-user,
    .card-actions {
      padding: 2rem 1.5rem;
    }

    .the-user {
      display: flex;
      align-items: center;
      gap: 1rem;
      background-color: var(--primary-blue);
      border-radius: 1rem;

      @include breakpoint(large) {
        flex-direction: column;
        align-items: flex-start;
        flex-grow: 2;
        max-width: 250px;
      }

      .user-avatar {
        width: 80px;
        height: 80px;
        border: 3px solid #fff;
        border-radius: 100%;
      }

      .user-name {
        h1 {
          font-size: 1.5rem;
          line-height: 2rem;
          font-weight: 300;
          margin-top: 0.5rem;

          @include breakpoint(large) {
            font-size: 2.5rem;
            line-height: 3rem;
          }
        }
      }
    }

    .card-actions {
      display: flex;
      justify-content: space-between;

      @include breakpoint(large) {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }

      a {
        color: var(--neutral-pale);
        font-size: 1.25rem;
        text-decoration: none;
        box-shadow: inset 0 -0.3rem 0 rgba(255, 255, 255, 0.3);
        transition: all 0.1s ease-out;
      }

      a.active,
      a:focus,
      a:hover {
        color: #fff;
      }

      a.active {
        box-shadow: none;
      }

      a:not(.active):focus,
      a:not(.active):hover {
        box-shadow: inset 0 -1.5rem 0 rgba(255, 255, 255, 0.3);
      }

      a:focus {
        box-shadow: inset 0 -1.5rem 0 rgba(255, 255, 255, 0.3), 0 0 0 2px white;
      }

      a:not(.active):focus {
        box-shadow: inset 0 -1.5rem 0 rgba(255, 255, 255, 0.3), 0 0 0 2px white;
      }
    }
  }
</style>